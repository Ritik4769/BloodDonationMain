<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script> -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:400,700&amp'>
  <style>
     @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
#head{
  padding: 1px;
  background: white;
  display: flex;
  align-items: center;

}
.nav-item{
  padding: 0 12px;
}
.container1{
  max-width: 1200px;
  padding: 2px;
  margin: auto;
}
.nav-item:hover{
  transition: 0.5s!important;
  background: #EEEEEE;
  border: none;
  border-radius: 9px;
}
.form-control{
    box-shadow: 0 4px 4px rgba(0,0,0,0.2) inset;
}
  </style>
</head>
<body>
    <header>
        <%- include('../partials/header2', {variant: 'compact' }); %>
      </header>
    <div class="container mt-5 mb-3">
        <h2 class="text-center">Blood Request Form</h2>
        <div class="row">
            <div class="col-md-6">
                <form action="/user/blood_request" method="post" enctype="multipart/form-data">
                    <input type="text" value="<%=id%>"  name="id" id="" >
                    <div class="form-group">
                        <label for="patientName">Patient Name</label>
                        <input type="text" class="form-control" id="patientName" name="patientName" required>
                    </div>
                    <div class="form-group">
                        <label for="bloodGroup">Blood Group</label>
                        <select class="form-control" id="bloodGroup" name="bloodGroup" required>
                            <option value="">Select Blood Group</option>
                            <option value="A_plus_unit">A+</option>
                            <option value="A_minus_unit">A-</option>
                            <option value="B_plus_unit">B+</option>
                            <option value="B_minus_unit">B-</option>
                            <option value="O_plus_unit">O+</option>
                            <option value="O_minus_unit">O-</option>
                            <option value="AB_plus_unit">AB+</option>
                            <option value="AB_minus_unit">AB-</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="doctorPrescriptionImage">Doctor's Prescription Image</label>
                        <input type="file" class="form-control-file" id="doctorPrescriptionImage" name="doctorPrescriptionImage" accept="image/*" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="diseases">Diseases</label>
                        <textarea class="form-control" id="diseases" name="diseases" rows="4" required></textarea>
                    </div>                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn " style="background: #DF2443;color: white;">Submit Request</button>
                </div>
            </div>
        </form>
    </div>
</div>
<footer>
    <%- include('../partials/footer', {variant: 'compact' }); %>
</footer>
</body>