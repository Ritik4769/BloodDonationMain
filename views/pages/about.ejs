/* Styles for the container section */
.cta {
    margin: 100px auto;
    width: 100%;
    background-image: url(./images/img2.jpg);
    background-position: center;
    background-size: cover;
    border-radius: 10px;
    text-align: center;
    padding: 100px 0;
}

/* Styles for the content within the container */
.cta1 {
    margin: 0 auto;
    width: 100%; /* Adjust the width as needed */
    max-width: 1200px; /* Set a maximum width to control the container's size */
    background-color: rgba(232, 18, 18, 0.7); /* Background color with transparency */
    border-radius: 10px;
    text-align: center;
    padding: 50px; /* Adjust padding as needed */

    display: flex; /* Use flexbox to arrange content */
    flex-direction: column; /* Stack content vertically on small screens */
}

/* Styles for the text and title */
.cta1 > div {
    flex: 1; /* Make the divs take up equal space within the container */
}

.cta h1 {
    color: #fff;
    margin-bottom: 20px; /* Reduce the margin for smaller screens */
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .cta {
        padding: 60px 0; /* Adjust padding on smaller screens */
    }

    .cta1 {
        padding: 30px; /* Adjust padding on smaller screens */
    }
}

