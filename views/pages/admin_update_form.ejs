/* ===================================== Basic CSS ==================================== */
* {
  margin: 0px;
  padding: 0px;
  list-style: none; 
}

img {
  max-width: 100%; 
}

a {
  text-decoration: none;
  outline: none;
  color: #444; 
}

a:hover {
  color: #444; 
}

ul {
  margin-bottom: 0;
  padding-left: 0; 
}

a:hover,
a:focus,
input,
textarea {
  text-decoration: none;
  outline: none; 
}


.form-01-main,html,body{
  height: 100%;

}
.form-01-main {
    /* height: 100vh; */
    padding: 40px 0px;
    background: url(./images/foot.jpg);
    background-position: center;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    text-align: center;     
    width:100%;
    z-index: 1;
}

.form-cover {
    position: absolute;
    content: "";
    background: rgba(255,255,255,0.6);
    bottom: 0;
    top: 0;
    width: 100%;
    left: 0;
    /* z-index: -1; */
    height: 100%;
    overflow: auto;
}

.form-sub-main{
    max-width:500px;
    width:100%;
    display:block;
    margin:20px auto;
    background:rgba(255,0,0,0.2);
    padding: 45px 60px 46px;

}
 @media screen and (max-width:767px){
      .form-sub-main{
        padding: 30px;
      }
  }

.form-control {
    min-height: 50px;
    -webkit-box-shadow: none;
    box-shadow: none;
    border: 1px solid whitesmoke;
    padding: 10px 15px;
    background-color: transparent;
    color: #fff;
    margin:30px 0px;
}
/* input::placeholder{
  color: whitesmoke!important;
} */
.form-sub-main{
    color:#545454;
    font-size:16px;
    margin-top: 5%;
}

.form-sub-main .form-group label{
    display:block;
    margin-bottom:6px;
    color:#fff;
}

.form-group{
    position:relative;
    z-index:9;
}

.toggle-password{
    position:absolute;
    right:8px;
    bottom:18px;
}

.form-group .form-control:focus{
    background:transparent;
    box-shadow:none;
    border-color:#495057;
    color:#495057;
}

.check_box_main{
  display:inline-block;
  width:100%;
  text-align:center;
}

.btn_uy{
  position:relative;
  z-index:9;
  display:block; 
  border: none;
  box-shadow: none;
  margin:20px 0px;
}

.btn_uy input {
    padding: 10px 20px;
    background: #DF2443;
    text-transform: uppercase;
    text-align: center;
    font-size: 16px;
    font-weight: 400;
    white-space: nowrap;
    line-height: normal;
    border-radius: 5px;
    color: #fff;
    width: 100%;
    position: relative;
    display: inline-block;
    cursor:pointer;
    outline: none;
}

._main_head_as{
  margin:20px 0 25px 0px;
  display:inline-block;
  z-index:2;
  position:relative; 
}

._main_head_as a img{
  height:100px;
  width:100px;
  position:relative;
  border-radius:50px;
}
