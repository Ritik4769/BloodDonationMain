  <script>
    const btn=document.querySelectorAll(".nav-btn");
    const img_slide=document.querySelectorAll(".img-slide");
    const content = document.querySelectorAll(".content");
    var slideshow=function(manual){
      btn.forEach((btn1)=>{
        btn1.classList.remove("active");
      });
      img_slide.forEach((img)=>{
        img.classList.remove("active");
      })
      content.forEach((con)=>{
        con.classList.remove("active");
      });     
      btn[manual].classList.add("active");
      img_slide[manual].classList.add("active"); 
      content[manual].classList.add("active");
    }
    btn.forEach((btn1,i)=>{
        btn1.addEventListener("click",()=>{
          slideshow(i);
        });
      });
  </script>
