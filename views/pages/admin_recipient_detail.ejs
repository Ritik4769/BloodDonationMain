    #dashboard{
        width:100%;
        height: auto;        
        margin-left: 255px;
    }
    #dashboard input,#dashboard select{
          width: 75%;
    }
    table tbody tr:nth-child(odd){
        position: relative;
    }
    table tbody tr:nth-child(even) td .container{
        display: none;   
        transition: 1s;
    }
    table tr th,table tr td{
        border-right: 1px solid white;
        border-bottom: none;
    }
    .fa-arrow-circle-o-down{
        color: black;
    }
    .hidden {
  display: none;
}
    @media (max-width:1000px){
         #dashboard{
            margin-left: 0;
