    /* dropdown end */
    
</style>
    <script>
    $(document).ready(function(){
        $('.open-modal').click(function(){
            var prescriptionImg = $(this).data('prescription');
            var _id = $(this).data('_id');
            var name = $(this).data('name');
            var email = $(this).data('email');
            $('#modalemail').text(email);
            $('#exampleModal img').attr('src', '/uploads/' + prescriptionImg);
            $('#exampleModal a').attr('href', '/admin/acceptrequest/' + _id+"/"+name+"/"+email);
            $('#anchor').text('/admin/acceptrequest/' + _id+"/"+name+"/"+email);
        });
    });
</script>
</head>

<body>
    <%- include('../partials/admin_navbar', {variant: 'compact' }); %>
    
     <section id="dashboard">
         <div class="container py-2 px-5" style="background: #107ECB;">
             <div class="row justify-content-start align-items-center">
                <h1 class="text-light pt-4">Blood Request Details</h1>
                <div class="row">
                    <div style="width: 150px;height: 2px;background: #DF2443;margin: 5px;"></div>
                    <div style="width: 150px;height: 2px;background-color: black;margin: 5px;"></div>
                </div>
                <p class="text-light py-4" style="font-size: 20px;">Brief Overview</p>

                <div style="margin-top: -70px; width: 60vw;height: 2px;background: whitesmoke;"></div>
             </div>             
         </div>

        <div class="my-2 mx-3 container p-5" >
         <div class="py-2 px-4" style="border-radius: 12px;background: #107ECB;margin: auto;">
            <div class="row pt-2 pb-3 justify-content-start align-items-center" style="border-bottom: 1px solid white;">
              <h2 class="text-light">All Request</h2>
              <div class="row px-3">
                <div style="width: 150px;height: 2px;background: #DF2443;margin: 5px;"></div>
                <div style="width: 150px;height: 2px;background: #000;margin: 5px;"></div>
              </div>
            </div>
        <div class="table-responsive" style="height: 600px;overflow-y: scroll;">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th style="color: white;">
                         <div class="d-flex justify-content-center align-items-center">
                            <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div>
                             <h4 class="px-2 pt-2">Profiles</h4>
                         </div>
                        </th>
                        <th style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <h4 class="px-2 pt-2">Name</h4>
                            </div>
                        </th>
                        <th style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <h4 class="px-2">Email</h4>
                            </div>
                        </th>
                        <th style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <span style="width: 20px; height: 20px;background: white;border-radius: 5px;"></span> -->
                                <h4 class="px-2 pt-2">Patient Name</h4>
                            </div>
                        </th>
                        <th style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <span style="width: 20px; height: 20px;background: white;border-radius: 5px;"></span> -->
                                <h4 class="px-2 pt-2">Disease</h4>
                            </div>
                        </th>
                        <th style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <span style="width: 20px; height: 20px;background: white;border-radius: 5px;"></span> -->
                                <h4 class="px-2 pt-2">bloodGroup</h4>
                            </div>
                        </th>
                        <th style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <span style="width: 20px; height: 20px;background: white;border-radius: 5px;"></span> -->
                                <h4 class="px-2 pt-2">Prescription Image</h4>
                            </div>
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% existingUser.forEach(User => { %>
                    <tr>
                        <td style="color: white;">
                            <div class="d-flex align-items-center">
                               <div style="width: 20px; height: 20px;background: white;border-radius: 5px;margin: 0 15px;"></div>
                               <i class='fas fa-user-alt fs-4'></i>
                            </div>
                        </td>
                        <td style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <p><%=User.name%></p>
                                
                            </div>
                        </td>
                        <td style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <p><%=User.email%></p>
                            </div>
                        </td>
                        <td style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <p><%=User.patient_name%></p>
                            </div>
                        </td>
                        <td style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <p><%= User.disease %></p>
                            </div>
                        </td>
                        <td style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <p><%= User.bloodGroup %></p>
                            </div>
                        </td>
                        <td style="color: white;">
                            <div class="d-flex justify-content-center align-items-center">
                               <!-- <div style="width: 20px; height: 20px;background: white;border-radius: 5px;"></div> -->
                                <!-- <p data-bs-toggle="modal" data-bs-target="#exampleModal" data-prescrition="<%= User.dr_PrescriptionImg %>" ><%= User.dr_PrescriptionImg %></p> -->
                                <a data-bs-toggle="modal" data-bs-target="#exampleModal" data-prescription="<%= User.doctorPrescriptionImage %>" data-email="<%=User.email%>" data-_id="<%=User._id%>" data-name="<%=User.name%>"  class="open-modal"><%= User.doctorPrescriptionImage %></a>

                            </div>
                        </td>
                        
                    </tr>
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p  id="modalemail" style="color: #000;"></p>
                            </div>
                            <div class="modal-body">
                                <img src="/uploads/<%=User.doctorPrescriptionImage%>" alt="Image" style="width: 450px; height: 450px;">
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel Request</button>
                             <a href="/admin/acceptrequest/<%=User._id%>/<%=User.name%>/<%=User.email%>"><button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="myModalButton">Accept Request</button></a>
                               <p id="anchor" style="color: #000; display: none;"></p>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }); %>
                </tbody>
            </table>
        </div>
        </div>  
        </div>
     </section>

